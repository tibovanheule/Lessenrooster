            <Insets />
         </opaqueInsets>
         <padding>
            <Insets left="20.0" top="20.0" />
         </padding>
      </VBox>
      <VBox alignment="TOP_RIGHT" GridPane.columnIndex="2">
         <children>
            <HBox alignment="TOP_RIGHT" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <MenuButton fx:id="menu" alignment="BOTTOM_RIGHT" styleClass="menu">
                    <items>
                        <MenuItem onAction="#maximize" text="_Maximize" />
                      <MenuItem onAction="#about" text="_About" />
                      <MenuItem onAction="#exit" text="_Close">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                    </items>
